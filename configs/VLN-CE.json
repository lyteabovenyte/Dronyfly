{
    "data_dir": "data/VLN-CE/R2R_VLNCE_v1-3_preprocessed",
    "train_split": "train",
    "val_split": "val_unseen",
    "vocab_size": 3000,
    "embed_dim": 300,
    "lang_hidden": 256,
    "visual_dim": 256,
    "attn_hidden": 256,
    "policy_hidden": 128,
    "action_space": 6,
    "max_instruction_length": 80,
    
    "training": {
        "lr": 5e-5,
        "batch_size": 16,
        "epochs": 100,
        "gamma": 0.99,
        "max_grad_norm": 1.0,
        "entropy_coef": 0.01,
        "value_coef": 0.5,
        "max_episodes": 30,
        "save_interval": 100,
        "max_steps": 50,
        "num_workers": 0,
        "checkpoint_interval": 5,
        "warmup_steps": 1000,
        "gradient_accumulation_steps": 2,
        "lr_scheduler": {
            "type": "cosine",
            "warmup_steps": 1000,
            "max_steps": 10000
        }
    },
    
    "optimization": {
        "use_amp": false,
        "pin_memory": false,
        "prefetch_factor": 2,
        "weight_decay": 0.01,
        "adam_eps": 1e-8,
        "adam_beta1": 0.9,
        "adam_beta2": 0.999
    },
    
    "model": {
        "lang_encoder": {
            "type": "transformer",
            "model_name": "distilbert-base-uncased",
            "hidden_dim": 256,
            "max_instruction_length": 80,
            "dropout": 0.1
        },
        "visual_encoder": {
            "type": "mobilenet",
            "pretrained": true,
            "input_size": [128, 128],
            "dropout": 0.1
        },
        "cross_modal": {
            "visual_dim": 256,
            "lang_dim": 256,
            "hidden_dim": 256,
            "num_heads": 4,
            "num_layers": 2,
            "dropout": 0.1
        },
        "policy": {
            "hidden_dim": 256,
            "action_space": 6,
            "dropout": 0.1
        }
    }
}
